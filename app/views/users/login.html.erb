<!--    Login form-->
    <section id="login">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <div class="form-wrap">
                        <h1>Logowanie do serwisu</h1>
                        <form role="form" action="/users/authorize" method="post" id="login-form" autocomplete="off">
                            <div class="form-group">
                                <label class="sr-only">Email użytkownika</label>
                                <input name="email" id="email" class="form-control" placeholder="email">
                            </div>
                            <div class="form-group">
                                <label for="password" class="sr-only">Hasło</label>
                                <input type="password" name="password" id="password" class="form-control" placeholder="Hasło">
                            </div>
                            <div class="checkbox">
                                <span class="character-checkbox" onclick="showPassword()"></span>
                                <span class="label">Pokaż hasło</span>
                            </div>
                            <input type="submit" id="btn-login" class="btn btn-custom btn-lg btn-block" value="Logowanie">
                        </form>
                        <a href="javascript:;" class="forget" data-toggle="modal" data-target=".forget-modal">Nie pamiętasz hasła?</a>
                        <hr>
                    </div>
                </div>
                <!-- /.col-xs-12 -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /.container -->
        <% if flash[:notice] %>
            <div class="alert alert-danger" id="wrong-password" role="alert">Nieprawidłowy email lub hasło</div>
        <% end %>

    </section>